#nav {
    position: absolute;
    bottom: -30px;
    left: 50%;
    transform: translateX(-50%) !important;
    height: 100px;
    transform: translateY(70px);
    opacity: 0;
    // transition: $transition ;
    z-index: 10000;
    transition: all .5s linear;

    img {
        position: relative;
        width: 300px;
    }

    #nav-click {
        position: absolute;
        top: 0;
        left: 10px;
        width: 100%;
        height: 100%;

    }
}

.show {
    transform: translateY(0) !important;
    opacity: 1 !important;
}