*,
*::after,
*::before {
  padding: 0;
  margin: 0;
}

.container {
  min-width: 1100px;
}

#site-hero {
  display: inline-block;
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-position: center;
}
#site-hero img {
  width: 100vw;
  height: 100vh;
  -o-object-fit: cover;
     object-fit: cover;
}

#site_container {
  height: 100vh;
  z-index: 1221;
  min-width: 1200px !important;
}
#site_container .banner {
  z-index: 10;
  opacity: 1;
  width: 1100px;
}
#site_container .owl-carousel {
  min-width: 1200px;
}

.owl-carousel {
  height: 100vh;
  position: relative;
}
.owl-carousel .owl-item {
  min-width: 1200px;
}
.owl-carousel .banner {
  height: 100vh;
  -o-object-fit: cover;
     object-fit: cover;
  min-width: 1200px;
}
.owl-carousel .bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
}
.owl-carousel .slide-1 {
  height: 100vh;
}
.owl-carousel .slide-1 .menu {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, calc(-50% + 28px));
  background-image: url("../../Asset/game_All_Pfizer_4.png");
  background-repeat: no-repeat;
  background-position: center;
  background-size: 80%;
  height: 120px;
  width: 100%;
  -o-object-fit: cover;
     object-fit: cover;
}
.owl-carousel .slide-1 .click_area {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, calc(-50% + 15px));
  z-index: 12321;
  height: 120px;
  width: 100%;
}
.owl-carousel #page-4 {
  background-image: url("../Asset/BG_Page10to14.jpg");
  height: 100vh;
}
.owl-carousel .content {
  position: absolute;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  transform: translateY(200px);
}
.owl-carousel .content img {
  z-index: 1000;
  width: 100%;
  -o-object-fit: contain;
     object-fit: contain;
}

#nav {
  position: absolute;
  bottom: -30px;
  left: 50%;
  transform: translateX(-50%) !important;
  height: 100px;
  transform: translateY(70px);
  opacity: 0;
  z-index: 10000;
  transition: all 0.5s linear;
}
#nav img {
  position: relative;
  width: 300px;
}
#nav #nav-click {
  position: absolute;
  top: 0;
  left: 10px;
  width: 100%;
  height: 100%;
}

.show {
  transform: translateY(0) !important;
  opacity: 1 !important;
}/*# sourceMappingURL=style.css.map */