.owl-carousel {
    height: 100vh;
    position: relative;

    .owl-item {

        min-width: 1200px;

    }

    .banner {
        height: 100vh;
        object-fit: cover;
        min-width: 1200px;
    }

    .bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .slide-1 {
        height: 100vh;

        .menu {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, calc(-50% + 28px));
            // background-image: url('./Asset/game_All_Pfizer_4.png');
            background-repeat: no-repeat;
            background-position: center;
            background-size: 80%;
            height: 120px;
            width: 100%;
            object-fit: cover;
        }

        .click_area {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, calc(-50% + 15px));
            z-index: 12321;
            height: 120px;
            width: 100%;
        }
    }


    #page-4 {
        background-image: url('../Asset/BG_Page10to14.jpg');
        height: 100vh;


    }

    .content {
        position: absolute;
        height: 100%;
        width: 100%;
        top: 0;
        left: 0;
        transform: translateY(200px);

        img {
            z-index: 1000;
            width: 100%;
            object-fit: contain;
        }
    }

}